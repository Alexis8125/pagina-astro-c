---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="p-0 m-0 box-border">
		<!-- <slot /> -->
		<header class="h-[104px] bg-[#161d24]">
			<div class="container max-w-[1200px] mx-auto h-[100%]">
				<div
					class="m-0 justify-center flex items-center w-[70%] float-left h-[100%] text-[#f4e5e5] font-sans uppercase"
				>
					<img
						src="https://store.akamai.steamstatic.com/public/shared/images/responsive/header_logo.png"
						alt="Logo Steam"
						class="w-48 mr-8"
					/>
					<menu>
						<li class="ml-[10px] list-none inline-block">
							<a
								href="#"
								class="no-underline text-[#f4e5e5] font-semibold hover:text-[#ffffff] text-[0.9vmax]"
								>Tienda</a>
						</li>
						<li class="ml-[10px] list-none inline-block">
							<a
								href="#"
								class="no-underline text-[#f4e5e5] font-semibold hover:text-[#ffffff] text-[0.9vmax]"
								>Comunidad</a>
						</li>
						<li class="ml-[10px] list-none inline-block">
							<a
								href="#"
								class="no-underline text-[#f4e5e5] font-semibold hover:text-[#ffffff] text-[0.9vmax]"
								>Acerca de</a>
						</li>
						<li class="ml-[10px] list-none inline-block">
							<a
								href="#"
								class="no-underline text-[#f4e5e5] font-semibold hover:text-[#ffffff] text-[0.9vmax]"
								>Soporte</a>
						</li>
					</menu>
				</div>
				<div
					class="float-left mt-[10px] w-[30%] text-[#f4e5e5] font-sans text-[11px]"
				>
					<a
						href="#"
						class="no-underline text-[#f4e5e5] bg-[#789806] py-[4px] px-[12px] font-sans inline-flex items-start gap-2 hover:bg-[#8aab14]"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="w-[13px]"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
							></path>
						</svg>Instalar Steam
					</a>
					<a href="#">Iniciar Sesi√≥n</a>
					|
					<a href="#"
						>Idioma <i class="fa-solid fa-caret-down"></i></a
					>
				</div>
			</div>
		</header>
		<div class="h-[450px] bg-[url('https://raw.githubusercontent.com/Alexis8125/curriculum/refs/heads/develoment/img/Sin%20t%C3%ADtulo.png')] bg-cover bg-no-repeat">
			<br>
				<div class="container max-w-[940px] mx-auto h-[35px] bg-slate-500 flex items-center justify-center">
					<div class="inline-block items-center h-[100%] w-[80%]">
						<li class="list-none inline-block ml-1 mr-7 mt-1">
							<a
								href="#"
								class="no-underline text-[#ffffff] font-semibold hover:text-[#ffffff] text-[13px]"
								>Tu Tienda</a>
						</li>
						<li class="list-none inline-block mr-7 mt-1">
							<a
								href="#"
								class="no-underline text-[#ffffff] font-semibold hover:text-[#ffffff] text-[13px]"
								>Nuevo y Destacable</a>
						</li>
						<li class=" list-none inline-block mr-7 mt-1">
							<a
								href="#"
								class="no-underline text-[#ffffff] font-semibold hover:text-[#ffffff] text-[13px]"
								>Categorias</a>
						</li>
						<li class=" list-none inline-block mr-7 mt-1">
							<a
								href="#"
								class="no-underline text-[#ffffff] font-semibold hover:text-[#ffffff] text-[13px]"
								>Tienda de puntos</a>
						</li>
						<li class=" list-none inline-block mr-7 mt-1">
							<a
								href="#"
								class="no-underline text-[#ffffff] font-semibold hover:text-[#ffffff] text-[13px]"
								>Noticias</a>
						</li>
						<li class=" list-none inline-block mt-1">
							<a
								href="#"
								class="no-underline text-[#ffffff] font-semibold hover:text-[#ffffff] text-[13px]"
								>Laboratorios</a>
						</li>
					</div>
					<div class="w-[20%] flex items-center justify-end">
						<input type="search" name="" id="" class="mr-1 bg-slate-400 text-[#fff] hover:border-spacing-1 rounded" placeholder="buscar"><i class="fa-solid fa-magnifying-glass mr-1 bg-slate-600"></i>
					</div>
				</div>
			
			

			</div>
			<!-- Contruir el bloque de la pagina de Steam -->
		</div>

		<div
			class="float-left z-[1] max-w-[940px] mx-auto -left-[180px] bg-pink-500 w-[180px] h-[360px] sticky top-0"
		>
		</div>

		<div
			class="container max-w-[9400px] mx-auto bg-purple-600 h-[240px] relative"
		>
		</div>

		<div class="h-[1200px] bg-blue-400"></div>
		<!-- Con group puede darle estilos a uhn hijo con slectores descendentes, en este caso, que cuando este encima la animacion se efectue -->
		<div
			class="group items-center hover:cursor-pointer duration-300 transition-colors hover:bg-blue-600 rounded py-2 px-4 text-white inline-flex bg-blue-500"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mr-1 mt-[3px] group-hover:animate-spin"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
				></path>
			</svg>

			Presioname!
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mt-[3px] ml-1"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
			</svg>
		</div>
		<script
			src="https://kit.fontawesome.com/cc651b5ac7.js"
			crossorigin="anonymous"></script>
	</body>
</html>
